{
  "lock": false,
  "tasks": {
    "start": "deno run -A --env --watch netzo.ts",
    "test": "deno test -A --env --parallel --coverage=./cov --doc",
    "check:types": "deno check **/*.ts **/*.tsx",
    "ok": "deno fmt --check && deno lint && deno task check:license --check && deno task check:types && deno task test"
  },
  "unstable": [
    "cron",
    "kv"
  ],
  "lint": {},
  "fmt": {},
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",
    "jsxImportSource": "preact"
  },
  "imports": {
    "@/": "./",
    "netzo/": "https://deno.land/x/netzo@0.4.2/"
  }
}
